<div class="container details bg-white p-5 rounded-4">
  <h3>Assign New Position</h3>
  <form class="container p-3 m-auto" action="" method="POST">
    <div class="row">

      <div class="col mb-3">
        <label for="employeeName" class="form-label">Employee Name</label>
        <input
          type="text"
          class="form-control"
          id="employeeName"
          name="employeeName"
          value="{{employee.name}}"
          disabled
        />
      </div>

      <div class="col mb-3">
        <label for="departmentId" class="form-label">Department</label>
        <select name="departmentId" id="departmentId" class="form-control">

          {{#generateNameOptions
            departments.results departments.results
          }}{{/generateNameOptions}}
        </select>
      </div>
    </div>

    <div class="row">

      <div class="col mb-3">
        <label for="name" class="form-label">Position</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="{{input.name}}"
        />
      </div>
      <div class="col mb-3">
        <label for="startDate" class="form-label">Start Date</label>
        <input
          type="date"
          class="form-control"
          id="startDate"
          name="startDate"
          value="{{inputDate input.startDate}}"
        />
      </div>
    </div>
    
    <button type="submit" class="btn btn-primary btn-add rounded-5 mt-4 px-4 py-2"><i class="fa-solid fa-floppy-disk"></i> Save
      Changes</button>
  </form>

</div>