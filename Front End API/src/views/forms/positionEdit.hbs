<div class="container details bg-white p-5 rounded-4">
  <div class="d-flex justify-content-between">
    <h3>Edit Position</h3>
    <a href="/positions/{{position.employeeId}}/endContract" class="btn btn-delete btn-cta rounded-5 py-2 confirm"><i class="fa-regular fa-circle-xmark"></i> End Contract</a>
  </div>
  <form class="container p-3 m-auto" action="" method="POST">
    <div class="row">

      <div class="col mb-3">
        <label for="employeeName" class="form-label">Employee Name</label>
        <input
          type="text"
          class="form-control"
          id="employeeName"
          name="employeeName"
          value="{{employee.name}}"
          disabled
        />
      </div>

      <div class="col mb-3">
        <label for="departmentId" class="form-label">Department</label>
        <select name="departmentId" id="departmentId" class="form-control">

          {{#generateNameOptions
            departments.results position.departmentId
          }}{{/generateNameOptions}}
        </select>
      </div>
    </div>

    <div class="row">

      <div class="col mb-3">
        <label for="name" class="form-label">Position</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="{{position.name}}"
        />
      </div>
      <div class="col mb-3">
        <label for="startDate" class="form-label">Start Date</label>
        <input
          type="date"
          class="form-control"
          id="startDate"
          name="startDate"
          value="{{inputDate position.startDate}}"
        />
      </div>
    </div>
    <hr />
    <div class="row">
      <h3>Salary</h3>
    </div>
    <div class="row">
      <div class="col mb-3">
        <h5 class="mb-3">Amount: {{salary.amount}} {{salary.currency}}</h5>
        {{#if salary.bonuses.length}}
        <hr>
        <h6 class="fw-bold">Bonuses:</h6>
          {{#each salary.bonuses}}
            <p>{{bonusType}} ({{amount}} {{../salary.currency}})</p>
          {{/each}}
        {{/if}}
      </div>

      <div class="col mb-3">
        <a href="/salary/{{salary._id}}/edit"><i class="fa-solid fa-arrow-right-arrow-left"></i> Change Salary</a>
      </div>

    </div>

<div class="d-flex align-items-center gap-3">
    <button type="submit" class="btn btn-primary btn-add rounded-5 mt-4 py-2 px-4"><i class="fa-solid fa-floppy-disk"></i> Save
      Changes</button>
  <a class="btn btn-secondary btn-add rounded-5 mt-4 py-2 px-4" href="/employees/{{position.employeeId}}/details"><i class="fa-solid fa-backward-step"></i> Back</a>
</div>
  </form>
</div>

<script src="/js/confirm.js"></script>