<div class="container bg-white p-4 rounded-3 table-wrapper">
  <!-- content header -->
<h5>Search by Name</h5>
  {{> searchForm}}
  <div class="p-2 rounded-4">
  <a href="?sort=name" class="btn btn-primary ml-1">Sort By Name &darr;</a>
  <a href="?sort=name&order=desc" class="btn btn-primary">Sort By Name &uparrow;</a>
  </div>
  <hr>
  <div class="content-header d-flex justify-content-between">
    <h3 class="content-title">Employees List</h3>
    {{#requireManager user.role}}
      <a href="/employees/add" class="btn btn-primary btn-add rounded-5 py-2">
        <i class="fa-solid fa-user-plus"></i>
        Add New Employee
      </a>
    {{/requireManager}}
  </div>
  <!-- table -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Position</th>
        <th scope="col">Department</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each employees.results}}
        <tr class="clickable-row" data-href="/employees/{{_id}}/details">
          <td><a class="link" href="/employees/{{_id}}/details">{{name}}</a></td>
          <td>{{position.name}}</td>
          <td><a class="link" href="/departments/{{position.department._id}}/details">{{position.department.name}}</a></td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <!-- Pagination buttons -->
  
  {{>pagination employees}}
</div>