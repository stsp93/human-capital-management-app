        <div class="container bg-white p-5 rounded-3 table-wrapper">
            <!-- content header -->
            <div class="content-header d-flex justify-content-between">
              <a class="link" href="/departments/{{department._id}}/details"><h3 class="content-title">{{department.name}} Department</h3></a>
            </div>
            <!-- table -->
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Position</th>
                  <th scope="col">Start Date</th>
                </tr>
              </thead>
              <tbody>
                {{#each positions.results}}
                <tr class="clickable-row" data-href="/employees/{{employeeId}}/details">
                  <td><a class="link" href="/employees/{{employee._id}}/details">{{employee.name}}</a></td>
                  <td>{{name}}</td>
                  <td>{{formatDate startDate}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            {{>pagination positions}}
          </div>