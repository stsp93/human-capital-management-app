<section class="container-fluid">
    <div class="auth-content row bg-success text-center">
      <div class="col-md-4 text-center company__info">
        <span class="company__logo"
          ><h2><i class="fa-solid fa-id-card"></i></h2
        ></span>
        <h4 class="company_title">Human Capital Management</h4>
      </div>
      <div class="py-4 col-md-8 col-xs-12 col-sm-12 auth-form">
        <div class="container-fluid">
          <div class="row">
            <h2 class="auth-title">Register</h2>
          </div>
          <div class="row">
            <form class="form-group">
              <div class="row">
                <input
                  type="text"
                  name="username"
                  id="username"
                  placeholder="Username"
                />
              </div>
              <div class="row">
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Password"
                />
              </div>
              <div class="row">
                <input
                  type="password"
                  name="rePassword"
                  id="rePassword"
                  placeholder="Repeat Password"
                />
              </div>
              <p class="auth-error">Fill the fields</p>
              <div class="row justify-content-center">
                <button type="submit" class="btn auth-btn">Submit</button>
              </div>
            </form>
          </div>
          <div class="row">
            <p>Have an account? <a href="/login">Login Here</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>