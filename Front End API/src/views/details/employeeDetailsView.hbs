
<div class="container employee-details bg-white p-5 rounded-4">
    <div class="row employee-header">
      <div class="col d-flex gap-3 align-items-end">
        <span><i class="far fa-circle-user fa-6x"></i></span>
        <div>
          <h2>{{name}}</h2>
          
        </div>
      </div>
      <div class="col d-flex flex-column justify-content-start align-items-end">
        {{#if allowEdit}}
        <a href="" class="btn btn-edit btn-cta rounded-5"
          ><i class="fa-solid fa-wrench"></i> Edit Infomation</a
        >
        {{/if}}
        {{#requireManager user.role}}
        <a href="" class="btn action-link">Assign new Position</a>
        <a href="" class="btn action-link">Edit current Position</a>
        {{/requireManager}}
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col">
        <p><strong>Email:</strong> {{email}}</p>
        <p><strong>Phone:</strong> {{phone}}</p>
        <p><strong>Address:</strong> {{address}}</p>

      </div>
      <div class="col">
        <div>
          <p><strong>Department:</strong> {{department.name}}</p>
          <p><strong>Position:</strong> {{activePosition.name}}</p>
          <p><strong>Start Date:</strong> {{formatDate activePosition.startDate}}</p>
          {{#if salary}}
          <p><strong>Salary:</strong> {{salary.salary}} {{salary.currency}}</p>
          {{/if}}
        </div>
        <div class="mt-4">
          {{#if prevPositions}}
          <h5>Previous Positions:</h5>
          <ul>
            {{#each prevPositions}}
            <li>
              <p>{{name}}, {{formatDate startDate}} - {{formatDate endDate}}</p>
            </li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
    </div>
    {{#requireAdmin user.role}}
    <div class="d-flex justify-content-end">
      <a href="" class="btn btn-delete btn-cta rounded-5 px-4">Delete Employee</a>
    </div>
    {{/requireAdmin}}
  </div>