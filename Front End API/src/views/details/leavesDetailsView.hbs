
<div class="container details bg-white p-5 rounded-4">
    <div class="row details-header">
      <div class="col d-flex gap-3 align-items-end">
        <span class="details-icon"><i class="fa-solid fa-person-walking-dashed-line-arrow-right"></i></span>
        <div>
          <h2>Leave Request</h2>
        </div>
      </div>
      <div class="col d-flex flex-column justify-content-start align-items-end">
        {{#requireManager user.role}}
        <a href="/leaves/{{_id}}/edit" class="btn btn-edit btn-cta rounded-5"
          ><i class="fa-solid fa-wrench"></i> Edit Leave</a
        >
        {{/requireManager}}
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col">
        <p><strong>Employee:</strong> <a class="details-link" href="/employees/{{employee._id}}">{{employee.name}}</a></p>
        <p><strong>Phone:</strong> {{employee.phone}}</p>
        <p><strong>Email:</strong> {{employee.email}}</p>
      </div>
      <div class="col">
        <div>
          <p><strong>Leave Type:</strong> {{type}}</p>
          <p><strong>Start Date(dd/mm/yy):</strong> {{formatDate startDate}}</p>
          <p><strong>End (dd/mm/yy):</strong> {{formatDate endDate}}</p>
          <p><strong>Rejected/Approved:</strong> {{status}}</p>
          {{#leaveNotResolved status}}
                    {{#requireManager user.role}}
                        <div><a class="btn btn-cta btn-edit rounded-5 px-3" href="/leaves/{{_id}}/approved">Approve</a>
                        <a class="btn btn-cta btn-delete rounded-5 px-3" href="/leaves/{{_id}}/rejected">Reject</a></div>
                    {{/requireManager}}
                  {{/leaveNotResolved}}
        </div>
        <div class="mt-4">
          {{#if prevPositions}}
          <h5>Previous Positions:</h5>
          <ul>
            {{#each prevPositions}}
            <li>
              <p>{{name}}, {{formatDate startDate}} - {{formatDate endDate}}</p>
            </li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
    </div>
    {{#requireAdmin user.role}}
    <div class="d-flex justify-content-end">
      <a href="" class="btn btn-delete btn-cta rounded-5 px-4">Delete Employee</a>
    </div>
    {{/requireAdmin}}
  </div>