<div>
  <ul class="pagination">
    {{#if prevPage}}
      <li class="page-item">
        <a class="page-link" href="?{{prevPage}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}

{{#if totalPages}}
    <li class="page-item">
      <a class="page-link">{{currentPage}}</a>
    </li>
{{/if}}
    {{#if nextPage}}
      <li class="page-item">
        <a class="page-link" href="?{{nextPage}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</div>